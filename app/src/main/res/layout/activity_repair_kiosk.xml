<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".RepairKioskActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_warning"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_warning"
                app:tint="?attr/colorError" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repair Mode Active"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorError" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="User data is encrypted."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_charging_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/abc_list_selector_background_transition_holo_dark"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Charging Port: Checking..."
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurface"
        app:drawableStartCompat="@drawable/ic_security"
        app:drawableTint="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/diagnostic_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_charging_status">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_run_diagnostics"
            style="@style/DiagnosticCard"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_handyman" app:tint="?attr/colorPrimary"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="System Diags" android:textAppearance="?attr/textAppearanceLabelLarge"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_test_camera"
            style="@style/DiagnosticCard"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_photo_camera" app:tint="?attr/colorPrimary"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Test Camera" android:textAppearance="?attr/textAppearanceLabelLarge"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_test_speaker"
            style="@style/DiagnosticCard"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_volume_up" app:tint="?attr/colorPrimary"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Test Speaker" android:textAppearance="?attr/textAppearanceLabelLarge"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_report_issue"
            style="@style/DiagnosticCard"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_bug_report" app:tint="?attr/colorPrimary"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Report Issue" android:textAppearance="?attr/textAppearanceLabelLarge"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tv_logs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="#000000"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:text="> Waiting for technician input..."
        android:textColor="#00FF00"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/btn_exit_repair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diagnostic_grid" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit_repair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:text="EXIT REPAIR MODE"
        app:backgroundTint="#B02C2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>