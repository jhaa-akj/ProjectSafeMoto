# ======================================
# Android Studio / Gradle Project .gitignore
# ======================================

# Gradle build output
/build/
*/build/
!gradle/wrapper/gradle-wrapper.jar

# Local configuration (SDK path, etc.)
local.properties

# Gradle caches and logs
.gradle/
**/build/
*.log

# Android generated files
captures/
output.json
*.apk
*.ap_
*.aab

# Keystore files (keep private!)
*.jks
*.keystore

# ==============================
# IntelliJ / Android Studio files
# ==============================

# Exclude most of .idea, but keep important project configs
.idea/*
!.idea/codeStyles/
!.idea/runConfigurations/
!.idea/vcs.xml
!.idea/misc.xml

# User-specific files (should not be shared)
.idea/workspace.xml
.idea/tasks.xml
.idea/dictionaries
.idea/libraries/
.idea/caches/
.idea/modules.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml
.idea/deploymentTargetDropDown.xml
.idea/shelf/

# ==============================
# OS-specific files
# ==============================

# macOS
.DS_Store

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini

# Linux
*~

# ==============================
# Miscellaneous
# ==============================
# Built application files
*.dex
*.class

# Backup & temporary files
*.tmp
*.temp
*.bak
*.swp

# ==============================
# Android Studio Navigation Editor temp files
# ==============================
.navigation/

# ==============================
# Jetpack Compose Preview cache
# ==============================
*.compose-cache/

# ==============================
# Firebase / Google Services
# ==============================
# (Optional — remove if you want to share your google-services.json)
google-services.json
GoogleService-Info.plist

# ==============================
# Signing Configs
# ==============================
# (Optional — if you use a signing.properties file)
signing.properties
